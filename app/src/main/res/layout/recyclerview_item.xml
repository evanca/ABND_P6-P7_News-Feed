<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/padding_8dp">

    <TextView
        android:id="@+id/webtitle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/large_font_24sp"
        app:fontFamily="@font/playfair_display" />

    <TextView
        android:id="@+id/webpublicationdate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_padding_4dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_thumbnail"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/sectionname_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSection"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_font_18sp" />

    </RelativeLayout>

</LinearLayout>